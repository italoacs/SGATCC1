@model SGATCC.Areas.Coordenador.Models.Turma

@{
    ViewData["Title"] = "Excluir";
}


<h3>Tem certeza que deseja excluir?</h3>
<div>
    <h4>Turma</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Curso)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Curso.Descricao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Turno)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Turno.Descricao)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="TurmaId" />
        <input type="submit" value="Excluir" class="btn btn-danger" /> &nbsp;
        <a asp-action="Index" class="btn btn-light">Voltar</a>
    </form>
</div>
