@model SGATCC.Models.Login
@{
    Layout = null;
}



<!DOCTYPE html>
<html lang="pt-br">
<head>
    <title>SGA</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="~/lib/font-awesome/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="~/fonts/iconic/css/material-design-iconic-font.min.css">
    <link rel="stylesheet" type="text/css" href="~/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/css/main.css">

</head>
<body>
    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">
                <form class="login100-form validate-form" asp-controller="Account" asp-action="PostLogin">
                    <span class="login100-form-logo">
                        <i class="zmdi zmdi-graduation-cap"></i>
                    </span>

                    <span class="login100-form-title p-b-34 p-t-27">
                        SGA
                    </span>

                    <div class="wrap-input100 validate-input" data-validate="Enter username">
                        <input asp-for="UserName" class="input100" placeholder="Usuário" required>
                        <span class="focus-input100" data-placeholder="&#xf207;"></span>
                    </div>
                    <div class="wrap-input100 validate-input" data-validate="Enter password">
                        <input asp-for="Password" class="input100" placeholder="Senha" required>
                        <span class="focus-input100" data-placeholder="&#xf191;"></span>
                    </div>
                    <div class="contact100-form-checkbox">
                        <input class="input-checkbox100" id="ckb1" type="checkbox" name="remember-me">
                        <label class="label-checkbox100" for="ckb1">
                            Lembrar de mim?
                        </label>
                    </div>
                    <span asp-validation-for="UserName" style="color:white"></span>
                    <span asp-validation-for="Password" style="color:white"></span>

                    @if (ViewBag.Erro != null)
                    {
                        <span class="text-center" style="color:white">@ViewBag.Erro</span>
                        <br />
                    }

                    <div class="container-login100-form-btn" style="margin-top:30px">
                        <button type="submit" class="login100-form-btn">
                            Entrar
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
